<parameters>

  <!-- Cosmological parameters. These are the eigenvectors of the Planck covarince matrix and are assigned uniform normal -->
  <!-- priors. The actual cosmological parameters will be derived from linear combinations of these parameters.           -->
  <parameter>
    <name>cosmology0</name>
    <prior>
      <distribution>
	<type>normal</type>
	<mean>0.0</mean>
	<variance>1.0</variance>
	<minimum>-5</minimum>
	<maximum>+5</maximum>
      </distribution>
    </prior>
    <mapping>
      <type>linear</type>
    </mapping>
    <random>
      <type>Cauchy</type>
      <median>0.0</median>
      <scale>1.0e-3</scale>
    </random>
  </parameter>
  <parameter>
    <name>cosmology1</name>
