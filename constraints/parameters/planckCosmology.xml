  <!-- Derived cosmological parameters -->
  <parameter>
    <name>H_0</name>
    <define>67.3319820833335+%cosmology0*1.17458962225062</define>
  </parameter>
  <parameter>
    <name>powerSpectrumIndex</name>
    <define>0.958504159601165+%cosmology0*0.00577823455280713+%cosmology1*0.00387439417724313</define>
  </parameter>
  <parameter>
    <name>Omega_b</name>
    <define>(0.0220753480751452+%cosmology0*0.000190081231736401+%cosmology1*-1.37861431948876e-05+%cosmology2*0.000192915089682351)/(%H_0/100.0)**2</define>
  </parameter>
  <parameter>
    <name>Omega_Matter</name>
    <define>&amp;List::Util::min((0.142531780467512+%cosmology0*-0.00234586315102397+%cosmology1*-7.57975522945371e-05+%cosmology2*0.000667674514895168+%cosmology3*0.000473572874858586)/(%H_0/100.0)**2,1.0)</define>
  </parameter>
  <parameter>
    <name>sigma_8</name>
    <define>0.828053723322773+%cosmology0*-0.00592458503716429+%cosmology1*0.00249779571026827+%cosmology2*0.00213193527199763+%cosmology3*0.00268120335570423+%cosmology4*0.0101025539084441</define>
  </parameter>
  <parameter>
    <name>reionizationSuppressionOpticalDepth</name>
