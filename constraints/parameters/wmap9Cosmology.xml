<parameters>

  <!-- Cosmological parameters. These are the eigenvectors of the WMAP-9 covarince matrix and are assigned uniform normal -->
  <!-- priors. The actual cosmological parameters will be derived from linear combinations of these parameters.           -->
  <parameter>
    <name>cosmology0</name>
    <prior>
      <distribution>normal</distribution>
      <mean>0.0</mean>
      <variance>1.0</variance>
    </prior>
  </parameter>
  <parameter>
    <name>cosmology1</name>
    <prior>
      <distribution>normal</distribution>
      <mean>0.0</mean>
      <variance>1.0</variance>
    </prior>
  </parameter>
  <parameter>
    <name>cosmology2</name>
    <prior>
      <distribution>normal</distribution>
      <mean>0.0</mean>
      <variance>1.0</variance>
    </prior>
  </parameter>
  <parameter>
    <name>cosmology3</name>
    <prior>
      <distribution>normal</distribution>
      <mean>0.0</mean>
      <variance>1.0</variance>
    </prior>
  </parameter>
  <parameter>
    <name>cosmology4</name>
    <prior>
      <distribution>normal</distribution>
      <mean>0.0</mean>
      <variance>1.0</variance>
    </prior>
  </parameter>
  <parameter>
    <name>cosmology5</name>
    <prior>
      <distribution>normal</distribution>
      <mean>0.0</mean>
      <variance>1.0</variance>
    </prior>
  </parameter>

  <!-- Derived cosmological parameters -->
  <parameter>
    <name>powerSpectrumIndex</name>
    <define>0.961586573554395+%cosmology0*0.00530174982630898+%cosmology1*-0.00157592731912985+%cosmology2*0.000984273737238298+%cosmology3*0.000683887433215469+%cosmology4*0.00573457035298061</define>
  </parameter>
  <parameter>
    <name>Omega_Matter</name>
    <!-- Limit Omega_Matter to unity as the prior will be extremely small for such values anyway. -->
    <define>&amp;List::Util::min((0.137053724898809+%cosmology0*0.000475722980746319+%cosmology1*0.00189181213951844)/(%H_0/100.0)**2,1.0)</define>
  </parameter>
  <parameter>
    <name>sigma_8</name>
    <define>0.817778629947767+%cosmology0*0.00381708091380226+%cosmology1*0.00793126766944608+%cosmology2*0.0100201813929851+%cosmology3*0.00158429808685671+%cosmology4*0.00293115380367199+%cosmology5*0.00172704437323462</define>
  </parameter>
  <parameter>
    <name>H_0</name>
    <define>69.5534880979532+%cosmology0*0.401098937248234+%cosmology1*-0.558508882108955+%cosmology2*0.00377031877645827+%cosmology3*0.38754590465436</define>
  </parameter>
  <parameter>
    <name>Omega_b</name>
    <define>(0.0222537559146381+%cosmology0*0.000330479224462073)/(%H_0/100.0)**2</define>
  </parameter>
  <parameter>
    <name>reionizationSuppressionOpticalDepth</name>
    <!-- Limit reionizationSuppressionOpticalDepth to be positive -->
    <define>&amp;List::Util::max(0.0815488412282311+%cosmology0*0.00171838412747852+%cosmology1*-0.00185825450007132+%cosmology2*0.011788596233901,0.0)</define>
  </parameter>

  <!-- Enforce flatness -->
  <parameter>
    <name>Omega_DE</name>
    <define>1.0-%Omega_Matter</define>
  </parameter>

</parameters>
