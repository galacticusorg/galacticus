<!-- Defines a constraint to match to the Caputi et al. (2011) stellar mass -->
<!-- function at 4.25 to 5.00.                                              -->
<constraint>
  <name>UKIDSS UDS z=4.25 to z=5.00 stellar mass function</name>
  <label>ukidssUdsStellarMassFunctionZ4.625</label>
  <outputRedshift>4.250</outputRedshift>
  <outputRedshift>4.500</outputRedshift>
  <outputRedshift>4.750</outputRedshift>
  <outputRedshift>5.000</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>1.0e10</haloMassMinimum>
  <haloMassMaximum>1.0e15</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_UKIDSS_UDS_z4.625.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
