<!-- Defines a constraint to match to the Caputi et al. (2011) stellar mass -->
<!-- function at z=3.00 to 3.50.                                            -->
<constraint>
  <name>UKIDSS UDS z=3.00 to $z=3.50$ stellar mass function</name>
  <label>ukidssUdsStellarMassFunctionZ3.250</label>
  <outputRedshift>3.00</outputRedshift>
  <outputRedshift>3.25</outputRedshift>
  <outputRedshift>3.50</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>1.0e10</haloMassMinimum>
  <haloMassMaximum>1.0e15</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_UKIDSS_UDS_z3.250.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
