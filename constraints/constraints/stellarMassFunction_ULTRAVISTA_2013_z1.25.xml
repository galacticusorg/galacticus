<!-- Defines a constraint to match to the ULTRAVISTA z~1.25 stellar mass functions. -->
<constraint>
  <name>ULTRAVISTA z~1.25 stellar mass functions</name>
  <label>ultravistaStellarMassFunctionZ1.25</label>
  <outputRedshift>1.00</outputRedshift>
  <outputRedshift>1.25</outputRedshift>
  <outputRedshift>1.50</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_ULTRAVISTA_z1.25.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
