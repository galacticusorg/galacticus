<!-- Defines a constraint to match to the PRIMUS z~0.900 stellar mass functions. -->
<constraint>
  <name>PRIMUS z~0.900 stellar mass functions</name>
  <label>primusStellarMassFunctionZ0.900</label>
  <outputRedshift>0.80</outputRedshift>
  <outputRedshift>0.85</outputRedshift>
  <outputRedshift>0.90</outputRedshift>
  <outputRedshift>0.95</outputRedshift>
  <outputRedshift>1.00</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_PRIMUS_z0.900.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
