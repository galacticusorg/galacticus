<!-- Defines a constraint to match to the PRIMUS z~0.350 stellar mass functions. -->
<constraint>
  <name>PRIMUS z~0.350 stellar mass functions</name>
  <label>primusStellarMassFunctionZ0.350</label>
  <outputRedshift>0.30</outputRedshift>
  <outputRedshift>0.35</outputRedshift>
  <outputRedshift>0.40</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_PRIMUS_z0.350.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
