<!-- Defines a constraint to match to the z=2.23 HiZELS Halpha luminosity function. -->
<constraint>
  <name>HiZELS $$z=2.23 H$$\\alpha$$ luminosity function</name>
  <label>luminosityFunctionHalphaSobral2013HiZELSZ2.23</label>
  <outputRedshift>2.237</outputRedshift>
  <haloMassResolution>1.0e8</haloMassResolution>
  <haloMassMinimum>2.0e08</haloMassMinimum>
  <haloMassMaximum>1.0e15</haloMassMaximum>
  <analysis>constraints/scripts/luminosityFunction_HiZELS_Halpha_z2.23.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
