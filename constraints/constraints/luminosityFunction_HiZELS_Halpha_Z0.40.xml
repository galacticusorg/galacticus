<!-- Defines a constraint to match to the z=0.40 HiZELS Halpha luminosity function. -->
<constraint>
  <name>HiZELS $$z=0.40 H$$\\alpha$$ luminosity function</name>
  <label>luminosityFunctionHalphaSobral2013HiZELS</label>
  <outputRedshift>0.401</outputRedshift>
  <haloMassResolution>1.0e8</haloMassResolution>
  <haloMassMinimum>2.0e08</haloMassMinimum>
  <haloMassMaximum>1.0e15</haloMassMaximum>
  <analysis>constraints/scripts/luminosityFunction_HiZELS_Halpha_z0.40.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
