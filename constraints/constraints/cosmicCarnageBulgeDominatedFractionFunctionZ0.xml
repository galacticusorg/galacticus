<!-- Defines a constraint to match to the z=0 bulge-dominated fraction function used in the Cosmic CARnage workshop. -->
<constraint>
  <name>Cosmic CARnage $z=0$ bulge-dominated fraction function</name>
  <label>cosmicCarnageBulgeDominatedFractionFunctionZ0</label>
  <outputRedshift>0.0</outputRedshift>
  <haloMassResolution>1.0e9</haloMassResolution>
  <haloMassMinimum>2.0e9</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/cosmicCarnageBulgeDominatedFractionZ0.pl</analysis>
</constraint>
