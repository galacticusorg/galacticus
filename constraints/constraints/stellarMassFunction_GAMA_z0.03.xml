<!-- Defines a constraint to match to the z=0.03 GAMA stellar mass function. -->
<constraint>
  <name>GAMA z=0.03 stellar mass function</name>
  <label>gamaStellarMassFunctionZ0.03</label>
  <outputRedshift>0.03</outputRedshift>
  <haloMassResolution>1.0e6</haloMassResolution>
  <haloMassMinimum>2.0e06</haloMassMinimum>
  <haloMassMaximum>1.0e15</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_GAMA_z0.03.pl</analysis>
</constraint>
