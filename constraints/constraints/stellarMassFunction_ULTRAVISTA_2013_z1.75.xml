<!-- Defines a constraint to match to the ULTRAVISTA z~1.75 stellar mass functions. -->
<constraint>
  <name>ULTRAVISTA z~1.75 stellar mass functions</name>
  <label>ultravistaStellarMassFunctionZ1.75</label>
  <outputRedshift>1.50</outputRedshift>
  <outputRedshift>1.75</outputRedshift>
  <outputRedshift>2.00</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_ULTRAVISTA_z1.75.pl</analysis>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
