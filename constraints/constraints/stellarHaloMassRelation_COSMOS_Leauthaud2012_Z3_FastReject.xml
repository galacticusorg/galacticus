<!-- Defines a constraint to match to the z=0.74-1.00 COSMOS stellar mass vs. halo mass relation with fast rejection -->
<constraint>
  <name>COSMOS $$0.74$$--$$1.00$$ stellar mass vs. halo mass relation</name>
  <label>cosmosStellarHaloMassRelationZ0.87FastReject</label>
  <outputRedshift>0.87</outputRedshift>
  <haloMassResolution>1.0e10</haloMassResolution>
  <haloMassMinimum>1.0e11</haloMassMinimum>
  <haloMassMaximum>1.0e11</haloMassMaximum>
  <analysis>constraints/scripts/stellarHaloMassRelation_COSMOS_Leauthaud2012_Z3_FastReject.pl</analysis>
</constraint>
