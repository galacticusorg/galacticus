<!-- Defines a constraint to match to the PRIMUS z~0.450 stellar mass functions. -->
<constraint>
  <name>PRIMUS z~0.450 stellar mass functions</name>
  <label>primusStellarMassFunctionZ0.450</label>
  <outputRedshift>0.40</outputRedshift>
  <outputRedshift>0.45</outputRedshift>
  <outputRedshift>0.50</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_PRIMUS_z0.450.pl</analysis>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
