  <haloMassResolution>1.0e10</haloMassResolution>
  <haloMassMinimum>1.0e11</haloMassMinimum>
  <haloMassMaximum>1.0e11</haloMassMaximum>
  <analysis>constraints/scripts/stellarHaloMassRelation_COSMOS_Leauthaud2012_Z1_FastReject.pl</analysis>
</constraint>
