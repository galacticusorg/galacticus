<!-- Defines a constraint to match to the ZFOURGE z~2.250 stellar mass functions. -->
<constraint>
  <name>ZFOURGE z~2.250 stellar mass functions</name>
  <label>zfourgeStellarMassFunctionZ2.250</label>
  <outputRedshift>2.00</outputRedshift>
  <outputRedshift>2.25</outputRedshift>
  <outputRedshift>2.50</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_ZFOURGE_z2.250.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
