<!-- Defines a constraint to match to the Davidzon et al. (2013) stellar mass -->
<!-- function at z=0.90.                                                     -->
<constraint>
  <name>VIPERS z=0.90 stellar mass function</name>
  <label>vipersStellarMassFunctionZ0.90</label>
  <outputRedshift>0.80</outputRedshift>
  <outputRedshift>0.85</outputRedshift>
  <outputRedshift>0.90</outputRedshift>
  <outputRedshift>0.95</outputRedshift>
  <outputRedshift>1.00</outputRedshift>
  <haloMassResolution>1.0e8</haloMassResolution>
  <haloMassMinimum>2.0e8</haloMassMinimum>
  <haloMassMaximum>1.0e15</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_VIPERS_z0.90.pl</analysis>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
