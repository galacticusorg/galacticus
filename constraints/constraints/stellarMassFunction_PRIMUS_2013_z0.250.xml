<!-- Defines a constraint to match to the PRIMUS z~0.250 stellar mass functions. -->
<constraint>
  <name>PRIMUS $z=0.250$ stellar mass function</name>
  <label>primusStellarMassFunctionZ0.250</label>
  <outputRedshift>0.20</outputRedshift>
  <outputRedshift>0.25</outputRedshift>
  <outputRedshift>0.30</outputRedshift>
  <haloMassResolution>5.0e9</haloMassResolution>
  <haloMassMinimum>2.0e10</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/stellarMassFunction_PRIMUS_z0.250.pl</analysis>
  <systematicMassShift>yes</systematicMassShift>
  <massSystematicZeroPoint>11.3</massSystematicZeroPoint>
  <massSystematicOrder>1</massSystematicOrder>
</constraint>
