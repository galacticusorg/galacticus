<!-- Defines a constraint to match to the z=0 stellar mass function used in the Cosmic CARnage workshop. -->
<constraint>
  <name>Cosmic CARnage $z=0$ stellar mass function</name>
  <label>cosmicCarnageStellarMassFunctionZ0</label>
  <outputRedshift>0.0</outputRedshift>
  <haloMassResolution>1.0e9</haloMassResolution>
  <haloMassMinimum>2.0e9</haloMassMinimum>
  <haloMassMaximum>2.0e14</haloMassMaximum>
  <analysis>constraints/scripts/cosmicCarnageStellarMassFunctionZ0.pl</analysis>
</constraint>
