<!-- A standard set of constraints for Galacticus which uses just the local SDSS z=0.07 -->
<!-- stellar mass function and ALFALFA z=0.00 HI mass function                          -->
<constraintCompilation>

  <!-- z=0.07 stellar mass function -->
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_SDSS_Bernardi_z0.07.xml</definition>
    <weight>1.0</weight>
  </constraint>

  <!-- UKIDSS UDS stellar mass functions -->
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_UKIDSS_UDS_z3.250.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_UKIDSS_UDS_z3.875.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_UKIDSS_UDS_z4.625.xml</definition>
    <weight>1.0</weight>
  </constraint>

  <!-- PRIMUS stellar mass functions -->
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_PRIMUS_2013_z0.250.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_PRIMUS_2013_z0.350.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_PRIMUS_2013_z0.450.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_PRIMUS_2013_z0.575.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_PRIMUS_2013_z0.725.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <constraint>
    <definition>constraints/constraints/stellarMassFunction_PRIMUS_2013_z0.900.xml</definition>
    <weight>1.0</weight>
  </constraint>

  <!-- z=0.00 HI mass function -->
  <constraint>
    <definition>constraints/constraints/hiMassFunction_ALFALFA_z0.00.xml</definition>
    <weight>1.0</weight>
  </constraint>

  <!-- z=0.07 galaxy size distribution -->
  <constraint>
    <definition>constraints/constraints/diskGalaxySizes_SDSS_z0.07.xml</definition>
    <weight>1.0</weight>
  </constraint>

</constraintCompilation>
