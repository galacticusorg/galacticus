<!-- A standard set of constraints for Galacticus which uses the COSMOS z=0.22-0.48 and z=0.48-0.74 -->
<!--  stellar mass vs. halo mass relations                                                          -->
<constraintCompilation>

  <!--COSMOS z=0.22-0.48 stellar mass vs. halo mass relation  -->
  <constraint>
    <name>$z=0.22$--$0.48$ COSMOS stellar mass vs. halo mass relation</name>
    <definition>constraints/constraints/stellarHaloMassRelation_COSMOS_Leauthaud2012_Z1.xml</definition>
    <weight>1.0</weight>
  </constraint>
  <!--COSMOS z=0.48-0.74 stellar mass vs. halo mass relation  -->
  <constraint>
    <name>$z=0.48$--$0.74$ COSMOS stellar mass vs. halo mass relation</name>
    <definition>constraints/constraints/stellarHaloMassRelation_COSMOS_Leauthaud2012_Z2.xml</definition>
    <weight>1.0</weight>
  </constraint>

</constraintCompilation>
