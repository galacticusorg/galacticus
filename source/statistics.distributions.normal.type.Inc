  !% Defines a normal distribution with upper and lower limits.

  type, public, extends(distribution1D) :: distributionNormal
     logical          :: limitLowerExists, limitUpperExists
     double precision :: limitLower      , limitUpper      , &
          &              cdfAtLowerLimit , cdfAtUpperLimit , &
          &              mean            , variance
   contains
     procedure :: density    => distributionNormalDensity
     procedure :: cumulative => distributionNormalCumulative
     procedure :: inverse    => distributionNormalInverse
     procedure :: minimum    => distributionNormalMinimum
     procedure :: maximum    => distributionNormalMaximum
  end type distributionNormal

  interface distributionNormal
     !% Constructors for the normal distribution object.
     module procedure distributionNormalConstructor
  end interface distributionNormal
