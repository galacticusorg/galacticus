<?xml version="1.0"?>
<!-- Parameter file for building merger tree files from a simple CSV file. -->
<parameters>
  <formatVersion>2</formatVersion>
  <lastModified revision="2af8b4de4a0d9c4e83a0254a2f161dc94e305c15" time="2025-06-06T15:02:51"/>

  <task value="mergerTreeFileBuilder">

    <inputFileName value="forests.csv"/>
    <outputFileName value="forests.hdf5"/>
    <outputFormat value="galacticus"/>
    <haloMassesIncludeSubhalos value="true"/>

    <unitsMass>
      <unitsInSI value="1.989e30"/>
      <hubbleExponent value="0"/>
      <scaleFactorExponent value="0"/>
      <name value="Msolar"/>
    </unitsMass>

    <unitsLength>
      <unitsInSI value="3.0856769e22"/>
      <hubbleExponent value="0"/>
      <scaleFactorExponent value="0"/>
      <name value="Mpc"/>
    </unitsLength>

    <unitsVelocity>
      <unitsInSI value="1.0e3"/>
      <hubbleExponent value=" 0"/>
      <scaleFactorExponent value=" 0"/>
      <name value="km/s"/>
    </unitsVelocity>

    <property>
      <name value="treeIndex"/>
      <column value="1"/>
    </property>
    <property>
      <name value="nodeIndex"/>
      <column value="2"/>
    </property>
    <property>
      <name value="hostIndex"/>
      <column value="3"/>
    </property>
    <property>
      <name value="descendantIndex"/>
      <column value="4"/>
    </property>
    <property>
      <name value="nodeMass"/>
      <column value="5"/>
    </property>
    <property>
      <name value="redshift"/>
      <column value="6"/>
    </property>
  </task>

</parameters>
