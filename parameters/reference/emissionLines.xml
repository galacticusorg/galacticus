  <!-- Append calibrated HII region property options. -->
  <change type="append" path="">
    <hiiRegionEscapeFraction value="fixed">
      <escapeFraction value="0.10"/>
      <ageLimit       value="0.01"/>
    </hiiRegionEscapeFraction>
    <hiiRegionMassFunction value="rosolowsky2021">
      <exponent    value="-1.8e0"/>
      <massMinimum value="+1.0e4"/>
      <massMaximum value="+1.0e8"/>
    </hiiRegionMassFunction>
    <hiiRegionDensityDistribution value="logNormal">
      <densityHydrogenReference value="3.0e2"/>
      <densityHydrogenMinimum   value="1.0e1"/>
      <densityHydrogenMaximum   value="4.0e2"/>
      <sigma                    value="1.8e0"/>
    </hiiRegionDensityDistribution>
  </change>

  <!-- Append nodePropertyExtractors to output stellar and AGN emission line components. -->
  <!-- Include a typical set of interesting lines.                                       -->
  <change type="append" path="nodePropertyExtractor">
    <nodePropertyExtractor value="luminosityEmissionLine">
      <cloudyTableFileName value="%DATASTATICPATH%/hiiRegions/emissionLineLuminosities:sspSSP:BC2003:IMF:Chabrier:dustMetalsRatio0.4:factorMorphology2.0:abundanceAdjustS:0.2.hdf5"/>
      <lineNames value="balmerBeta4863 balmerAlpha6565 nitrogenII6550 nitrogenII6585 oxygenII3727 oxygenII3730 oxygenIII5008 sulfurII6718  sulfurII6733 sulfurIII9071 sulfurIII9533"/>
      <component         value="all"   />
      <toleranceRelative value="1.0d-2"/>
    </nodePropertyExtractor>
    <nodePropertyExtractor value="lmnstyEmssnLineAGN">
      <cloudyTableFileName value="%DATASTATICPATH%/hiiRegions/emissionLineLuminosities:AGN:dustMetalsRatio0.4:factorMorphology2.0:abundanceAdjustS:0.2.hdf5"/>
      <lineNames value="balmerBeta4863 balmerAlpha6565 nitrogenII6550 nitrogenII6585 oxygenII3727 oxygenII3730 oxygenIII5008 sulfurII6718  sulfurII6733 sulfurIII9071 sulfurIII9533"/>
      <densityHydrogen              value="+1.0e3"/>
      <indexSpectralShortWavelength value="-1.2e0"/>
      <factorFillingVolume          value="+0.5e0"/>
    </nodePropertyExtractor>
  </change>

</changes>
