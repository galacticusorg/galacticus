@article{sheth_excursion_1998,
	title = {An excursion set model for the distribution of dark matter and dark matter haloes},
	volume = {300},
	url = {http://adsabs.harvard.edu/abs/1998MNRAS.300.1057S},
	abstract = {A model of the gravitationally evolved dark matter distribution, in the Eulerian space, is developed. It is a simple extension of the excursion set model that is commonly used to estimate the mass function of collapsed dark matter haloes. In addition to describing the evolution of the Eulerian space distribution of the haloes, the model allows one to describe the evolution of the dark matter itself. It can also be used to describe density profiles, on scales larger than the virial radius of these haloes, and to quantify the way in which matter flows in and out of Eulerian cells. When the initial Lagrangian space distribution is white noise Gaussian, the model suggests that the Inverse Gaussian distribution should provide a reasonably good approximation to the evolved Eulerian density field, in agreement with numerical simulations. Application of this model to clustering from more general Gaussian initial conditions is discussed at the end.},
