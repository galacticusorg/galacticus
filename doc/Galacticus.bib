	file = {Full Text PDF:/home/abensonca/.mozilla/firefox/f54gqgdx.default/zotero/storage/KDAVRVIT/Sheth et al. - 2001 - Linear and non-linear contributions to pairwise pe.pdf:application/pdf}
}

@article{sheth_peculiar_2001,
