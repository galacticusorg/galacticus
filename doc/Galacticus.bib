	keywords = {cosmology: theory, large-scale structure of Universe, methods: N-body simulations},
	pages = {1311--1332},
	file = {Full Text PDF:/home/abensonca/.mozilla/firefox/f54gqgdx.default/zotero/storage/8WRJRB8F/Smith et al. - 2003 - Stable clustering, the halo model and non-linear c.pdf:application/pdf}
