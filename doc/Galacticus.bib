	journal = {The Astrophysical Journal Supplement Series},
	author = {More, Surhud and Kravtsov, Andrey V. and Dalal, Neal and Gottlöber, Stefan},
	month = jul,
	year = {2011},
	keywords = {cosmology: theory, {DARK} {MATTER}, methods: numerical},
