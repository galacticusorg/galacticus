@article{eisenstein_power_1999,
	title = {Power Spectra for Cold Dark Matter and Its Variants},
	volume = {511},
	url = {http://adsabs.harvard.edu/abs/1999ApJ...511....5E},
	abstract = {The bulk of recent cosmological research has focused on the adiabatic
cold dark matter model and its simple extensions. Here we present an
accurate fitting formula that describes the matter transfer functions of
all common variants, including mixed dark matter models. The result is a
