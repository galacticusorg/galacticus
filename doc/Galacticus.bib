@article{meier_association_2001,
	title = {The Association of Jet Production with Geometrically Thick Accretion Flows and Black Hole Rotation},
	volume = {548},
	url = {http://adsabs.harvard.edu/abs/2001ApJ...548L...9M},
	abstract = {A model is presented in which the strongest radio-emitting jet outflows
are produced in black hole systems when the accretion is a geometrically
thick {(H/R{\textasciitilde}1)} inflow (e.g., an advection-dominated or a
convection-dominated accretion flow) and if the black hole is rotating.
For galactic black hole candidates, the model naturally accounts for the
observed correlation of jet outflow with the black hole hard emission
state and predicts an association of strong jets with rapid black hole
rotation. When extended to the supermassive case, the model accounts for
the highest radio galaxy and quasar jet powers and provides additional
