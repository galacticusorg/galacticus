}

@article{calzetti_dust_2000,
	title = {The Dust Content and Opacity of Actively Star-forming Galaxies},
	volume = {533},
	issn = {0004-637X},
	url = {http://adsabs.harvard.edu/abs/2000ApJ...533..682C},
	doi = {10.1086/308692},
	abstract = {We present far-infrared ({FIR}) photometry at 150 and 205 mum of eight low-redshift starburst galaxies obtained with the Infrared Space Observatory ({ISO}) {ISOPHOT}. Five of the eight galaxies are detected in both wave bands, and these data are used, in conjunction with {IRAS} archival photometry, to model the dust emission at lambda{\textgreater}{\textasciitilde}40
