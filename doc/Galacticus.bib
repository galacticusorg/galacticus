},

@article{norberg_2df_2002,
	title = {The {2dF} Galaxy Redshift Survey: the {bJ-band} galaxy luminosity function and survey selection function},
	volume = {336},
	shorttitle = {The {2dF} Galaxy Redshift Survey},
	url = {http://adsabs.harvard.edu/abs/2002MNRAS.336..907N},
	abstract = {We use more than 110 500 galaxies from the {2dF} Galaxy Redshift Survey
{(2dFGRS)} to estimate the {bJ-band} galaxy luminosity function
