	keywords = {{ABSORPTION} {SPECTRA,} {BACKGROUND} {RADIATION,} {COLOR,} {COSMOLOGY,} {GALACTIC} {EVOLUTION,} {LYMAN} {SPECTRA,} {RADIATIVE} {TRANSFER,} {RED} {SHIFT,} {RESONANCE} {SCATTERING,} {STOCHASTIC} {PROCESSES,} {ULTRAVIOLET} {ASTRONOMY,} {UNIVERSE}},
