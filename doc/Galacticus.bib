	pages = {913–925}
},

@article{henriques_tidal_2010,
	title = {Tidal disruption of satellite galaxies in a semi-analytic model of galaxy formation},
	volume = {403},
	url = {http://adsabs.harvard.edu/abs/2010MNRAS.403..768H},
	abstract = {We introduce a new physical recipe into the De Lucia \& Blaizot
