@article{bardeen_statistics_1986,
	title = {The statistics of peaks of Gaussian random fields},
	volume = {304},
	url = {http://adsabs.harvard.edu/abs/1986ApJ...304...15B},
	abstract = {A set of new mathematical results on the theory of Gaussian random
fields is presented, and the application of such calculations in
cosmology to treat questions of structure formation from small-amplitude
initial density fluctuations is addressed. The point process equation is
discussed, giving the general formula for the average number density of
peaks. The problem of the proper conditional probability constraints
appropriate to maxima are examined using a one-dimensional illustration.
The average density of maxima of a general three-dimensional Gaussian
field is calculated as a function of heights of the maxima, and the
average density of 'upcrossing' points on density contour surfaces is
computed. The number density of peaks subject to the constraint that the
large-scale density field be fixed is determined and used to discuss the
segregation of high peaks from the underlying mass distribution. The
machinery to calculate n-point peak-peak correlation functions is
determined, as are the shapes of the profiles about maxima.},
	journal = {Astrophysical Journal},
	author = {J. M. Bardeen and J. R. Bond and N. Kaiser and A. S. Szalay},
	month = may,
	year = {1986},
	keywords = {{MAXIMA,} {PROBABILITY} {DISTRIBUTION} {FUNCTIONS,} {RANDOM} {PROCESSES,} {STATISTICAL} {ANALYSIS,} {STATISTICAL} {CORRELATION}},
	pages = {15--61}
},

@article{barkana_constraints_2001,
	title = {Constraints on Warm Dark Matter from Cosmological Reionization},
	volume = {558},
	url = {http://adsabs.harvard.edu/abs/2001ApJ...558..482B},
	abstract = {We study the constraints that high-redshift structure formation in the universe places on warm dark matter {(WDM)} dominated cosmological models. We modify the extended {Press-Schechter} formalism to derive the halo mass function in {WDM} models. We show that our predictions agree with recent numerical simulations at low redshift over the halo masses of interest. Applying our model to galaxy formation at high redshift, we find that the loss of power on small scales, together with the delayed collapse of low-mass objects, results in strong limits on the root-mean-square velocity dispersion vrms,0 of the {WDM} particles at redshift zero. For fermions decoupling while relativistic, these limits are equivalent to constraints on the mass {mX} of the particles. The presence of a {\textasciitilde}4{\texttimes}109 M solar supermassive black hole at redshift 5.8, believed to power the quasar {SDSS} 1044-1215, implies {mX{\textgreater}{\textasciitilde}0.5} {keV} (or vrms,0{\textless}{\textasciitilde}0.10 km s-1), assuming that the quasar is unlensed and radiating at or below the Eddington limit. Reionization by redshift 5.8 also implies a limit on {mX.} If high-redshift galaxies produce ionizing photons with an efficiency similar to their redshift-three counterparts, we find {mX{\textgreater}{\textasciitilde}1.2} {keV} (or vrms,0{\textless}{\textasciitilde}0.03 s-1). However, given the uncertainties in current measurements from the proximity effect of the ionizing background at redshift three, values of {mX} as low as 0.75 {keV} (or vrms,0=0.06 s-1) are not ruled out. The limit weakens further to {mX{\textgreater}{\textasciitilde}0.4} {keV} (or vrms,0{\textless}{\textasciitilde}0.14 s-1), if, instead, the ionizing-photon production efficiency is 10 times greater at high redshift, but this limit will tighten considerably if reionization is shown in the future to have occurred at higher redshifts. {WDM} models with {mX{\textless}{\textasciitilde}1} {keV} (or vrms,0{\textgreater}{\textasciitilde}0.04 s-1) produce a low-luminosity cutoff in the high-redshift galaxy luminosity function that is directly detectable with the Next Generation Space Telescope, and which serves as a direct constraint on {mX.}},
	journal = {The Astrophysical Journal},
	author = {Rennan Barkana and Zolt\'{a}n Haiman and Jeremiah P. Ostriker},
	month = sep,
	year = {2001},
	keywords = {Cosmology: Dark Matter, Cosmology: {Large-Scale} Structure of Universe, cosmology: theory, galaxies: formation, galaxies: high-redshift},
	pages = {482--496}
}

@article{baugh_can_2005,
	title = {Can the faint submillimetre galaxies be explained in the Λ cold dark matter model?},
	volume = {356},
	url = {http://adsabs.harvard.edu/abs/2005MNRAS.356.1191B},
	abstract = {We present predictions for the abundance of submillimetre galaxies
{(SMGs)} and Lyman-break galaxies {(LBGs)} in the Λ cold dark matter
cosmology. A key feature of our model is the self-consistent calculation
of the absorption and emission of radiation by dust. The new model
successfully matches the {LBG} luminosity function, as well as reproducing
the properties of the local galaxy population in the optical and
infrared. The model can also explain the observed galaxy number counts
at 850 μm, but only if we assume a top-heavy initial mass function
for the stars formed in bursts. The predicted redshift distribution of
{SMGs} depends relatively little on their flux over the range 1-10 {mJy,}
with a median value of z{\textasciitilde} 2.0 at a flux of 5 {mJy,} in good agreement with
the recent measurement by Chapman et al. The counts of {SMGs} are
predicted to be dominated by ongoing starbursts. However, in the model
these bursts are responsible for making only a few per cent of the
stellar mass locked up in massive ellipticals at the present day.},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {C. M. Baugh and C. G. Lacey and C. S. Frenk and G. L. Granato and L. Silva and A. Bressan and A. J. Benson and S. Cole},
	month = jan,
	year = {2005},
	keywords = {Galaxies: Evolution, galaxies: formation, galaxies: high-redshift, submillimetre},
	pages = {1191--1200}
}

@article{behroozi_comprehensive_2010,
