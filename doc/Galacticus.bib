@article{shapiro_hydrogen_1987,
	title = {Hydrogen molecules and the radiative cooling of pregalactic shocks},
	volume = {318},
	url = {http://adsabs.harvard.edu/abs/1987ApJ...318...32S},
	abstract = {The nonequilibrium radiative cooling, recombination, and molecule
