	author = {Reed, Darren S. and Bower, Richard and Frenk, Carlos S. and Jenkins, Adrian and Theuns, Tom},
	month = jan,
	year = {2007},
	keywords = {cosmology: theory, galaxies: formation, DARK MATTER, galaxies: haloes, methods: N-body simulations},
	pages = {2--15},
