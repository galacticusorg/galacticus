	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Ludlow, Aaron D. and Bose, Sownak and Angulo, Raúl E. and Wang, Lan and Hellwing, Wojciech A. and Navarro, Julio F. and Cole, Shaun and Frenk, Carlos S.},
	month = aug,
