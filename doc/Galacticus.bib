@article{davidzon_vimos_2013,
	title = {The {VIMOS} Public Extragalactic Redshift Survey ({VIPERS).} A precise measurement of the galaxy stellar mass function and the abundance of massive galaxies at redshifts 0.5 {\textless} z {\textless} 1.3},
	volume = {558},
	issn = {0004-6361},
	url = {http://adsabs.harvard.edu/abs/2013A%26A...558A..23D},
	doi = {10.1051/0004-6361/201321511},
	abstract = {We measure the evolution of the galaxy stellar mass function from z = 
1.3 to z = 0.5 using the first 53 608 redshifts of the ongoing {VIMOS}
Public Extragalactic Survey ({VIPERS).} Thanks to its large volume and
depth, {VIPERS} provides a detailed picture of the galaxy distribution at
z ≃ 0.8, when the Universe was ≃7 Gyr old. We carefully
