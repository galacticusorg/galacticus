	pages = {94--106}
}

@article{covington_effects_2011,
	title = {The Effects of Dissipation on {Early-Type} Scaling Relations
in {Semi-Analytic} Models},
	volume = {in preparation},
	abstract = {Observed elliptical galaxies follow a number of scaling relations between stellar mass,
velocity dispersion, and size. Furthermore, they fall in a tight plane called the ”fun-
damental plane” in this three-dimensional space. If major merging of disk galaxies is
a viable mechanism for the production of elliptical galaxies, then merging must be
capable of producing these scaling relations. Previous studies have suggested that it is
diﬃcult to produce the observed slope and scatter of the early-type size-mass relation
via major mergers. We apply a simple theoretical merger model to galaxy progenitors
produced by two semi-analytical models, in order to derive scaling relations of merger
remnants. Importantly, our model includes the eﬀects of gaseous energy dissipation
and star formation. Using this model, and without tuning the parameters to each
{SAM,} we are able to roughly match the slope and scatter in the observed scaling rela-
tions at low redshift as well as the observed amount of evolution of the relations since
redshift z = 3. Within this model, the production of the observed scaling relations,
including the tilt in the fundamental plane, results from the decrease in spiral galaxy
progenitor gas fractions with increasing mass.},
	journal = {{MNRAS}},
	author = {M. Covington and J. R. Primack and Lauren Porter and Darren Croton and R. S. Somerville and Avishai Dekel},
	year = {2011}
}

@article{creasey_how_2012,
	title = {How supernova explosions power galactic winds},
	volume = {1211},
	url = {http://adsabs.harvard.edu/abs/2012arXiv1211.1395C},
	abstract = {Feedback from supernovae is an essential aspect of galaxy formation. In order to improve subgrid models of feedback we perform a series of numerical experiments to investigate how supernova explosions power galactic winds. We use the Flash hydrodynamic code to model a simplified {ISM}, including gravity, hydrodynamics, radiative cooling above 10,000 K, and star formation that reproduces the Kennicutt-Schmidt relation. By simulating a small patch of the {ISM} in a tall box perpendicular to the disk, we obtain sub-parsec resolution allowing us to resolve individual supernova events and we investigate how the wind properties depend on those of the {ISM} and the galaxy. We find that outflows are more efficient in disks with lower surface densities or gas fractions. A simple model in which the warm cloudy medium is the barrier that limits the expansion of blast waves reproduces the scaling of outflow properties with disk parameters at high star formation rates. The scaling we find sets the investigation of galaxy winds on a new footing, providing a physically motivated sub-grid description of winds that can be implemented in cosmological hydrodynamic simulations and phenomenological models. {[Abridged]}},
	urldate = {2012-11-12},
	journal = {{ArXiv} e-prints},
	author = {Creasey, Peter and Theuns, Tom and Bower, Richard G.},
	month = nov,
	year = {2012},
	keywords = {Astrophysics - Cosmology and Extragalactic Astrophysics, Astrophysics - Galaxy Astrophysics},
	pages = {1395}
}

@article{croton_many_2006,
	title = {The many lives of active galactic nuclei: cooling flows, black holes and the luminosities and colours of galaxies},
	volume = {365},
	url = {http://adsabs.harvard.edu/abs/2006MNRAS.365...11C},
	abstract = {We simulate the growth of galaxies and their central supermassive black holes by implementing a suite of semi-analytic models on the output of the Millennium Run, a very large simulation of the concordance Lambda cold dark matter cosmogony. Our procedures follow the detailed assembly history of each object and are able to track the evolution of all galaxies more massive than the Small Magellanic Cloud throughout a volume comparable to that of large modern redshift surveys. In this first paper we supplement previous treatments of the growth and activity of central black holes with a new model for `radio' feedback from those active galactic nuclei that lie at the centre of a quasi-static X-ray-emitting atmosphere in a galaxy group or cluster. We show that for energetically and observationally plausible parameters such a model can simultaneously explain: (i) the low observed mass drop-out rate in cooling flows; (ii) the exponential cut-off at the bright end of the galaxy luminosity function; and (iii) the fact that the most massive galaxies tend to be bulge-dominated systems in clusters and to contain systematically older stars than lower mass galaxies. This success occurs because static hot atmospheres form only in the most massive structures, and radio feedback (in contrast, for example, to supernova or starburst feedback) can suppress further cooling and star formation without itself requiring star formation. We discuss possible physical models that might explain the accretion rate scalings required for our phenomenological `radio mode' model to be successful.},
	journal = {{MNRAS}},
	author = {Darren J. Croton and Volker Springel and Simon D. M. White and G. De Lucia and C. S. Frenk and L. Gao and A. Jenkins and G. Kauffmann and J. F. Navarro and N. Yoshida},
	year = {2006},
	keywords = {Black Hole Physics, cooling flows, cosmology: theory, Galaxies: Active, galaxies: evolution, galaxies: formation},
	pages = {11–28}
},

