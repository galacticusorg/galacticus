<?xml version="1.0" encoding="UTF-8"?>
<!-- Defines a set of Galacticus models which explore exporting of merger trees. -->
<!-- Andrew Benson                                                               -->
<!-- 12-October-2012                                                             -->
<parameterGrid>
  <emailReport>no</emailReport>
  <doAnalysis>no</doAnalysis>
  <modelRootDirectory>testSuite/outputs/test-merger-tree-write</modelRootDirectory>
  <baseParameters>testSuite/parameters/test-merger-tree-write-base.xml</baseParameters>
  <launchMethod>pbs</launchMethod>
  <pbs>
    <ompThreads>16</ompThreads>
    <maxJobsInQueue>1</maxJobsInQueue>
    <postSubmitSleepDuration>1</postSubmitSleepDuration>
    <jobWaitSleepDuration>10</jobWaitSleepDuration>
  </pbs>
  <parameters>
    <formatVersion>2</formatVersion>
    <version>0.9.4</version>
    <mergerTreeConstructMethod value="build">
      <mergerTreeOperatorMethod value="export" parameterLevel="top">
	<outputFileName value="testSuite/outputs/test-merger-tree-write/exportedTreesGLC.hdf5"/>
	<exportFormat   value="galacticus"                                                    />
      </mergerTreeOperatorMethod>
    </mergerTreeConstructMethod>
    <mergerTreeConstructMethod value="read">
      <mergerTreeReadFileName value="testSuite/data/mergerTrees/millenniumTestTreesGLC.hdf5" parameterLevel="top"/>
      <allTreesExistAtFinalTime value="false" parameterLevel="top"/>
      <cosmologyParametersMethod value="simple" parameterLevel="top">
	<OmegaMatter value="0.25"/>
	<OmegaDarkEnergy value="0.75"/>
	<OmegaBaryon value="0.045"/>
	<HubbleConstant value="73.0"/>
      </cosmologyParametersMethod>
      <cosmologicalMassVarianceMethod value="filteredPower" parameterLevel="top">
	<sigma_8 value="0.9"/>
      </cosmologicalMassVarianceMethod>
      <treeNodeMethodPosition value="preset" parameterLevel="top"/>
      <mergerTreeOperatorMethod value="export" parameterLevel="top">
	<outputFileName value="testSuite/outputs/test-merger-tree-write/exportedTreesIRATE.hdf5"/>
	<exportFormat   value="irate"                                                           />
      </mergerTreeOperatorMethod>
      <mergerTreeReadPresetOrbits value="false" parameterLevel="top"/>
      <mergerTreeReadPresetMergerTimes value="false" parameterLevel="top"/>
      <mergerTreeReadPresetSubhaloIndices value="false" parameterLevel="top"/>
      <mergerTreeReadPresetMergerNodes value="false" parameterLevel="top"/>
      <mergerTreeReadPresetSubhaloMasses value="false" parameterLevel="top"/>
      <mergerTreeReadPresetPositions value="true" parameterLevel="top"/>
      <mergerTreeReadPresetScaleRadii value="false" parameterLevel="top"/>
      <mergerTreeReadPresetSpins value="false" parameterLevel="top"/>
    </mergerTreeConstructMethod>
  </parameters>
</parameterGrid>
