<?xml version="1.0" encoding="UTF-8"?>
<!-- Parameters for validation of a Milky Way model. -->
<parameters>
  <formatVersion>2</formatVersion>
  <lastModified revision="165490f4968c699f7e5bb73ef60bcb7e626f51e6"/>

  <!-- Include required parameters -->
  <xi:include href="../../parameters/reference/darkMatterParticleCDM.xml"       xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/cosmology.xml"                   xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/powerSpectrum.xml"               xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/structureFormation.xml"          xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/darkMatterHalosProfile.xml"      xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/darkMatterHalosTidalHeating.xml" xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/darkMatterHalosStructure.xml"    xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/subhaloOrbits.xml"               xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/mergerTrees.xml"                 xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/filterLMC.xml"                   xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>
  <xi:include href="../../parameters/reference/evolutionGalaxyFormation.xml"    xpointer="xpointer(parameters/*)" xmlns:xi="http://www.w3.org/2001/XInclude"/>

  <!-- Set verbosity to standard level. -->
  <verbosityLevel value="standard"/>

  <!-- Set up the tasks to perform. -->
  <task value="evolveForests">
    <!-- Evolve merger tree forests. -->
  </task>

  <!-- Merger tree building options -->
  <mergerTreeBuildMasses value="fixedMass">
    <!-- Halo masses fixed at a single value. -->
    <!-- The value used is the median estimate at r=262kpc from Slizewski et al. (2022; https://ui.adsabs.harvard.edu/abs/2022ApJ...924..131S) -->
    <massTree   value="1.520e12"/>
    <radiusTree value="0.262e00"/>
    <treeCount  value="24"      />
  </mergerTreeBuildMasses>

  <!-- Halo mass resolution -->
  <mergerTreeMassResolution value="fixed">
    <!-- All trees are set to have the same halo mass resolution. -->
    <!-- A relatively coarse mass resolution is used to allow the model to run in reasonable time. -->
    <massResolution value="8.0e7"/>
  </mergerTreeMassResolution>

  <!-- Output epochs -->
  <outputTimes value="list">
    <!-- Additional redshifts can be added to this list to generate more outputs. -->
    <redshifts value="0.0"/>
  </outputTimes>

  <!-- Analyses -->
  <mergerTreeOutputter value="analyzer"/>
  <outputAnalysis      value="multi" >
    <outputAnalysis      value="localGroupStellarMassFunction"          >
      <!-- Set the log-likelihood for empty bins to zero - these are inevitable given the coarse mass resolution. -->
      <positionType      value="orbital"/>
      <logLikelihoodZero value="0.0"    />
    </outputAnalysis>
    <outputAnalysis      value="localGroupMassMetallicityRelation"       >
      <positionType      value="orbital"/>
    </outputAnalysis>
    <outputAnalysis      value="localGroupMassSizeRelation"              >
      <positionType      value="orbital"/>
    </outputAnalysis>
    <outputAnalysis      value="localGroupMassVelocityDispersionRelation">
      <positionType      value="orbital"/>
    </outputAnalysis>
    <outputAnalysis      value="localGroupStellarMassHaloMassRelation"   >
      <positionType      value="orbital"/>
    </outputAnalysis>
    <outputAnalysis      value="localGroupOccupationFraction"            >
      <positionType      value="orbital"/>
    </outputAnalysis>
  </outputAnalysis>
  <elementsToTrack value="Fe"/>

  <!-- Output file -->
  <outputFileName value="testSuite/outputs/validate_milkyWay.hdf5"/>

</parameters>
